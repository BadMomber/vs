FROM maven:3.6-jdk-11 AS build

#Build car-dependency cache
COPY car/sensor/pom.xml /usr/sensor/pom.xml
WORKDIR /usr/sensor
RUN mvn dependency:go-offline

#Build sensor
COPY car/sensor/ /usr/sensor/
RUN mvn -T 1C -f /usr/sensor/pom.xml clean package -Dmaven.test.skip -DskipTests -Dmaven.javadoc.skip=true

# Application Container
FROM openjdk:9
COPY --from=build /usr/sensor/target /usr/app

# default parameters
ARG ip="127.0.0.1"
ARG port=51020
ARG sensortype="Generic Sensor"

COPY Docker/sensor.sh /run.sh

ENTRYPOINT ["sh","/run.sh"]